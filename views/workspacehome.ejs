<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Ambit Workspace - Liquid Glass with Activity</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { font-family: 'Inter', sans-serif; }
    .glass {
      background: rgba(30, 30, 30, 0.6);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 20px;
      box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37);
    }
    .sidebar-link { @apply flex items-center gap-3 p-3 rounded-lg text-gray-300 hover:bg-gray-700/40 transition; }
    .sidebar-active { @apply bg-gray-700/50 text-white; }
  </style>
</head>
<body class="bg-gradient-to-br from-gray-900 to-black text-white flex min-h-screen">

  <aside class="w-20 md:w-64 p-4 glass flex flex-col shadow-2xl">
    <div class="flex flex-col items-center mb-10">
      <div class="w-12 h-12 bg-gray-600 rounded-full flex items-center justify-center text-xl font-bold mb-2">A</div>
      <p class="text-gray-300 text-sm font-semibold">Group1</p>
    </div>

    <div class="border-t border-gray-700 mb-4"></div>

    <nav class="flex flex-col gap-2 flex-1">
      <a href="#" class="sidebar-link sidebar-active"><i class="fas fa-home"></i><span class="hidden md:inline">Home</span></a>
      <a href="#" class="sidebar-link"><i class="fas fa-chart-line"></i><span class="hidden md:inline">Activity</span></a>
      <a href="#" class="sidebar-link"><i class="fas fa-file-alt"></i><span class="hidden md:inline">Documents</span></a>
      <a href="#" class="sidebar-link"><i class="fas fa-users"></i><span class="hidden md:inline">Teams</span></a>
    </nav>

    <div class="border-t border-gray-700 mt-4"></div>
    <a href="#" class="sidebar-link mt-4"><i class="fas fa-cog"></i><span class="hidden md:inline">Settings</span></a>
  </aside>

  <main class="flex-1 p-8 overflow-y-auto">
    <header class="flex justify-between items-center mb-10">
      <div class="flex items-center gap-4">
        <div class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center text-xl">P</div>
        <div>
          <h1 class="text-2xl font-bold">Welcome, <span class="text-gray-300"><%= userName %></span></h1>
          <p class="text-gray-400 text-sm">Stay productive today.</p>
        </div>
      </div>
      <div class="flex items-center gap-4">
        <input class="glass px-4 py-2 rounded-full placeholder-gray-300 text-white w-64 focus:outline-none focus:ring-2 focus:ring-gray-600" placeholder="Search..." />
        <button class="glass p-2 rounded-full hover:bg-gray-700/40 transition"><i class="fas fa-bell"></i></button>
      </div>
    </header>

    <!-- Stats -->
    <section class="grid md:grid-cols-3 gap-6 mb-10">
      <div class="glass p-5">
        <p class="text-sm opacity-80 mb-1">Total Minutes</p>
        <p class="text-4xl font-bold"><%= totalMinutes %></p>
        <p class="text-green-400 text-sm mt-2"><i class="fas fa-caret-up mr-1"></i>+5% from last week</p>
      </div>
      <div class="glass p-5">
        <p class="text-sm opacity-80 mb-1">Average Daily</p>
        <p class="text-4xl font-bold"><%= averageDaily %></p>
        <p class="text-red-400 text-sm mt-2"><i class="fas fa-caret-down mr-1"></i>-2% from yesterday</p>
      </div>
      <div class="glass p-5">
        <p class="text-sm opacity-80 mb-1">Total Chats</p>
        <p class="text-4xl font-bold"><%= totalChats %></p>
        <p class="text-blue-400 text-sm mt-2"><i class="fas fa-comments mr-1"></i>+12 new today</p>
      </div>
    </section>

     <!-- Quick Access Docs -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold mb-4">Quick Access Docs</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="glass p-5 cursor-pointer">
          <div class="flex items-center mb-2">
            <div class="p-2 bg-gray-700 rounded-full mr-3"><i class="fas fa-file-alt"></i></div>
            <h3 class="font-semibold">Staff Guidelines</h3>
          </div>
          <p class="text-gray-300 text-sm">By User</p>
          <p class="text-gray-400 text-xs">Updated: 2024-06-11</p>
        </div>
        <!-- More cards here if needed -->
      </div>
    </section>

    <!-- Dynamic Recent Activity -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold mb-4">Recent Activity</h2>
      <div class="glass p-5">
        <% if (recentActivities && recentActivities.length > 0) { %>
          <ul class="divide-y divide-gray-700">
            <% recentActivities.forEach(activity => { %>
              <li class="py-4 flex justify-between items-center">
                <div class="flex items-center gap-3">
                  <div class="p-2 bg-gray-700 rounded-full">
                    <i class="fas fa-clock text-white"></i>
                  </div>
                  <div>
                    <p class="font-medium text-white"><%= activity.description %></p>
                    <p class="text-xs text-gray-400"><%= activity.time %></p>
                  </div>
                </div>
                <span class="text-xs px-2 py-1 font-semibold rounded-full 
                  <%= activity.type === 'Session' 
                    ? 'bg-green-600/80 text-white' 
                    : (activity.type === 'Adjustment' 
                      ? 'bg-yellow-500/80 text-white' 
                      : 'bg-gray-600 text-white') %>">
                  <%= activity.type %>
                </span>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-gray-400">No recent activity to display.</p>
        <% } %>
      </div>
    </section>

    <!-- Recent Chats -->
    <section class="mb-10">
      <h2 class="text-xl font-semibold mb-4">Recent Chats</h2>
      <div class="glass p-5 space-y-4">
        <div class="flex justify-between items-center">
          <div>
            <p class="font-semibold">Example user 1</p>
            <p class="text-gray-400 text-sm">"Let's clean the stock room."</p>
          </div>
          <p class="text-gray-400 text-xs">3m ago</p>
        </div>
        <div class="flex justify-between items-center">
          <div>
            <p class="font-semibold">Example user 1</p>
            <p class="text-gray-400 text-sm">"Can you review my training?"</p>
          </div>
          <p class="text-gray-400 text-xs">15m ago</p>
        </div>
        <div class="flex justify-between items-center">
          <div>
            <p class="font-semibold">Example user 1</p>
            <p class="text-gray-400 text-sm">"Great job on the store restocking."</p>
          </div>
          <p class="text-gray-400 text-xs">1h ago</p>
        </div>
      </div>
    </section>

  </main>

  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
